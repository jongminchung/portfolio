{
  "name": "portfolio",
  "private": true,
  "version": "1.0.0",
  "author": {
    "name": "Nauris Linde",
    "url": "https://github.com/fazers"
  },
  "contributors": [
    {
      "name": "Nauris Linde",
      "url": "https://github.com/fazers"
    }
  ],
  "license": "MIT",
  "scripts": {
    "build": "bun run --workspaces --if-present build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "bun run --workspaces --if-present clean",
    "auth:generate": "bun run -F @acme/auth generate",
    "db:push": "bun run -F @acme/db push",
    "db:studio": "bun run -F @acme/db studio",
    "dev": "bun run -F @acme/web dev & bun run -F @acme/dashboard dev",
    "format": "biome format .",
    "format:fix": "biome format . --write",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --write",
    "check": "biome check .",
    "check:fix": "biome check . --write",
    "lint:ws": "bun x sherif@latest",
    "postinstall": "bun run lint:ws",
    "typecheck": "bun run --workspaces --if-present typecheck",
    "ui-add": "bun run -F @acme/ui ui-add",
    "prepare": "husky",
    "deps": "bun x taze@latest latest -Iwr"
  },
  "engines": {
    "node": "^24.11.1",
    "bun": "^1.3.3"
  },
  "packageManager": "bun@1.3.6",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "tooling/*"
    ],
    "catalog": {
      "@better-auth/cli": "1.4.4-beta.2",
      "@tailwindcss/postcss": "^4.1.17",
      "@tailwindcss/vite": "^4.1.16",
      "@tanstack/react-form": "^1.25.0",
      "@tanstack/react-query": "^5.90.10",
      "@trpc/client": "^11.7.1",
      "@trpc/server": "^11.7.1",
      "@trpc/tanstack-react-query": "^11.7.1",
      "@types/node": "^24.10.1",
      "@vitejs/plugin-react": "5.1.1",
      "better-auth": "1.4.4-beta.2",
      "simple-icons": "^13.21.0",
      "tailwindcss": "^4.1.17",
      "typescript": "^5.9.3",
      "zod": "^4.1.12",
      "vite": "^8.0.0-beta.7"
    },
    "catalogs": {
      "react19": {
        "@types/react": "^19.2.6",
        "@types/react-dom": "^19.2.3",
        "react": "19.2.0",
        "react-dom": "19.2.0"
      }
    }
  },
  "catalog": {
    "@better-auth/cli": "1.4.4-beta.2",
    "@tailwindcss/postcss": "4.1.17",
    "@tailwindcss/vite": "4.1.17",
    "@tanstack/react-form": "1.25.0",
    "@tanstack/react-query": "5.90.10",
    "@trpc/client": "11.7.1",
    "@trpc/server": "11.7.1",
    "@trpc/tanstack-react-query": "11.7.1",
    "@types/node": "24.10.1",
    "better-auth": "1.4.4-beta.2",
    "simple-icons": "^13.21.0",
    "tailwindcss": "4.1.17",
    "typescript": "5.9.3",
    "zod": "4.1.12"
  },
  "catalogs": {
    "react19": {
      "@types/react": "^19.2.6",
      "@types/react-dom": "^19.2.3",
      "react": "19.2.0",
      "react-dom": "19.2.0"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "dotenv-cli": "^11.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "shadcn": "^3.6.3",
    "typescript": "catalog:",
    "ultracite": "6.3.3"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --files-ignore-unknown=true",
      "biome check --write --no-errors-on-unmatched",
      "biome check --write --unsafe --no-errors-on-unmatched",
      "biome format --write --no-errors-on-unmatched",
      "biome lint --write --no-errors-on-unmatched"
    ],
    "*": [
      "biome check --no-errors-on-unmatched --files-ignore-unknown=true"
    ],
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix",
      "bun x ultracite fix",
      "bun x ultracite fix"
    ]
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@parcel/watcher",
    "@sentry-internal/node-cpu-profiler",
    "@sentry/cli",
    "@tailwindcss/oxide",
    "@vercel/speed-insights",
    "es5-ext",
    "esbuild"
  ]
}
